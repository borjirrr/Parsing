@{
    ViewData["Title"] = "Manual Parsing";
}

@model ManualParse.Models.Strings

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="text-center">
    <h1 class="display-4">JSON</h1>
</div>

@using (Html.BeginForm("UploadJson", "Home", FormMethod.Post, new { enctype = "multipart/form-data"}))
{
    <input class="form-control" type="file" name="file" accept=".json" />
    <button type="submit" class="btn btn-primary mt-2">Parse JSON File</button>
}


@if (!string.IsNullOrEmpty(Model?.Name) && !string.IsNullOrEmpty(Model?.Email))
{
    <hr />
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Email:</strong> @Model.Email</p>
}