@{
    ViewData["Title"] = "Manual Parsing";
    
}

@model ManualParse.Models.Strings

    <h1 class="display-4"> Manual Parsing</h1>

<form asp-action="Submit">
    <label>NAME: </label>
    <input class="form-control" type="text" placeholder="Enter Name" asp-for="Name"/>
    <label>EMAIL: </label>
    <input class="form-control" type="text" placeholder="Enter Email" asp-for="Email" />
    <button class="btn btn-primary mt-2" type="submit">Submit</button>
</form>


@if (!string.IsNullOrEmpty(Model?.Name) && !string.IsNullOrEmpty(Model?.Email))
{
    <hr />
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Email:</strong> @Model.Email</p>
}